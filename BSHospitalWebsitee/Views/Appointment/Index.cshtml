<a class="btn btn-success" id="btnEkle">Randevu Ekle</a>
<div id="divList" class="row"></div>

<form>
    <div class="modal fade" id="modalId" tabindex="-1" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitleId">Yeni bir Randevu Ekle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="mb-3 row">
                            <label for="inputName" class="col-4 col-form-label">Name Surname</label>
                            <div class="col-8">
                                <input type="text" class="form-control" id="txtName" placeholder="Name Surname ">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="inputName" class="col-4 col-form-label">TCKN</label>
                            <div class="col-8">
                                <input type="text" class="form-control" id="txtTCKN" placeholder="TC Number ">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="inputName" class="col-4 col-form-label">Department</label>
                            <div class="col-8">
                                <input type="text" class="form-control" id="txtDepartment" placeholder="Entry Department ">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="inputName" class="col-4 col-form-label">Select Doctor</label>
                            <div class="col-8">
                                <select class="form-select" name="script" id="txtDoctor"> </select>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="inputName" class="col-4 col-form-label">Appoimtment</label>
                            <div class="col-8">
                                <input type="datetime-local" class="form-control" id="txtDepartment" placeholder="Entry Days ">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <a  id="btnAppoimtent" class="btn btn-primary">Create Appoimtment</a>
                </div>
            </div>
        </div>
    </div>
</form>



@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            Listele();

            fillList();

            $("#btnEkle").click(function () {
                $("#modalId").modal('show')
            });

            function Listele() {

                $.ajax({
                    type: 'GET',
                    url: '/Appointment/GetAll',
                    success: function (res) {
                        $("#divList").empty();
                        for (var item of res) {
                            $("#divList").append(`<div class="col-4">
                                           <div class="card">
                                              <div class="card-body">
                                                  <h3 class="card-title bg-danger text-white"></h3>
                                                         HastaneId : ${item.hospitalId}
                                                       <p class="card-text">${item.departmentId}</p>

                                                        <p class="card-text">${item.appointmentDate}</p>

                                                         <p class="card-text">${item.hospitalName}</p>


                                                                   <p class="card-text">${item.departmentName}</p>

                                                                 <p class="card-text">${item.doctorName}</p>

                                                         <p class="card-text">${item.isCanceled}</p>
                                                </div>
                                                       <div class="card-footer text-center"><a onclick="setYapildi(${item.id})" class="btn btn-success">Done</a>    <a onclick="Sil(${item.id})" class="btn btn-danger">Sil</a> </div>
                                         </div>
                                    </div>`)
                        }
                    }
                });

            }
            function fillList(nameSurname) {
                $.ajax({
                    type:"GET",
                    url:"/Doctor/GetAll",
                    success:function(res){
                        $("#txtDoctor").empty();
                        for (var item of res) {
                            $("#txtDoctor").append(new Option(item.departmentName, item.departmentName, false));
                        }
                    }



                })

            }


           
     
        });
    </script>
}