        });


        function fillDataTable() {
            $("#tblHospitals").DataTable({
                ajax: '/Hospital/GetAll',
                columns: [
                    { data: 'id', title: 'ID' },
                    { data: 'hospitalName', title: 'Hastane Adı' }
                ],
            });
        }


        function updateHospital(id, nameSurname, isCanceled) {
            $("#txtHospital").val(nameSurname);

            $("#modalAdd").modal("show");
            $("#modalTitle").text("Hastane Güncelle");
            $("#btnSave").text("Güncelle");
            $("#btnSave").off();

            $("#btnSave").click(function () {
                var hospitalname = $("#txtHospital").val();

                $.ajax({
                    type: 'POST',
                    url: '/Hospital/Update',
                    data: { id: id, hospitalname: hospitalname },
                    success: function () {
                        $("#modalAdd").modal("hide");
                        $("#tblHospitals").DataTables().ajax.reload();
