@using CineScore.Models.DTOs
@model LoginDto
@{
    Layout = "";
}
<!doctype html>
<html lang="tr">

<head>

    <meta charset="utf-8" />
    <title>BSHospital | Giriş sayfası</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="AcunMedya Akademi bitirme projesi için gelistirilmiş .NetCore tabanlı Mvc uygulaması" name="description" />
    <meta content="savas" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/logo-sm.png">

    <link rel="stylesheet" type="text/css" href="~/assets/libs/toastr/build/toastr.min.css">


    <!-- Bootstrap Css -->
    <link href="~/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />

</head>

<body class="authentication-bg">
    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center">
                        <a href="index.html" class="mb-5 d-block auth-logo">
                            <img src="~/assets/images/logo-dark.png" alt="" height="100" class="logo logo-dark">
                            <img src="~/assets/images/logo-light.png" alt="" height="100" class="logo logo-light">
                        </a>
                    </div>
                </div>
            </div>
            <div class="row align-items-center justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card">

                        <div class="card-body p-4">
                            <div class="text-center mt-2">
                            </div>
                            <div class="p-2 mt-4">
                                <form asp-action="Login" method="post">

                                    <div class="mb-3">
                                        <label class="form-label" asp-for="UserName">Kullanıcı Adı</label>
                                        <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adınızı-Mail adresinizi giriniz">
                                    </div>

                                    <div class="mb-3">
                                        <div class="float-end">
                                            <a href="auth-recoverpw.html" class="text-muted">Şifremi Unuttum</a>
                                        </div>
                                        <label class="form-label" for="userpassword">Şifre</label>
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Lütfen Şifrenizi giriniz">
                                    </div>

                                    <div class="form-check">
                                        <input asp-for="RememberMe" type="checkbox" class="form-check-input">
                                        <label class="form-check-label" for="auth-remember-check">Beni Hatırla</label>
                                    </div>
                                    <div class="mb-3">
                                        <p id="btnAddNewUser" class="mesaj">Üye Değil Misin ? <a href="#">Hesap Oluştur</a></p>
                                    </div>

                                    <div class="mt-3 text-end">
                                        <button class="btn btn-primary w-sm waves-effect waves-light" type="submit">Giriş Yap</button>
                                    </div>


                                </form>
                            </div>

                        </div>
                    </div>

                    @* <div class="mt-5 text-center">
                    <p>© <script>document.write(new Date().getFullYear())</script> MovFlix. Crafted with By brspsn </p>
                    </div> *@

                </div>
            </div>

            <!-- end row -->
        </div>
        <!-- end container -->
    </div>


    <div class="modal fade" id="modalAdd" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered " role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitleId">Üye ol</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="frmAddUser" class="needs-validation">
                    <div class="modal-body">
                        <div class="container">

                            <div class="mb-3 row">
                                <label for="inputName" class="col-4 col-form-label">Kullanıcı Adı</label>
                                <div class="col-8">
                                    <input type="text" required class="form-control needs-validation" id="txtName" placeholder="Lütfen adınızı giriniz">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="inputName" class="col-4 col-form-label">Email</label>
                                <div class="col-8">
                                    <input type="email" class="form-control needs-validation input-mask" id="txtEmail" required data-inputmask="'alias': 'email'" parsley-type="email" placeholder="E-mail adresinizi giriniz">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="inputName" class="col-4 col-form-label">Gsm</label>
                                <div class="col-8">
                                    <input type="text" class="form-control input-mask" required id="txtGsm" data-inputmask="'mask': '(999)-9999999'" placeholder="Gsm Numarası giriniz">

                                </div>
                                <div class="mb-3 row">
                                    <label for="inputName" class="col-4 col-form-label">Şifre</label>
                                    <div class="col-8">
                                        <input minlenght="3" type="password" class="form-control" id="password" required placeholder="Şifre giriniz">
                                        <div class="invalid-tooltip">
                                            "Şifre bölümü boş bırakılamaz!"
                                        </div>
                                        <div class="valid-tooltip">
                                            "Looks good..."
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                            <button href="#" id="btnSave" type="submit" class="btn btn-primary">Üye ol</button>
                        </div>
                </form>
            </div>
        </div>
    </div>


    <partial name="_LoginPartial.cshtml" />



    <script>

        $(document).ready(function () {
            $("#btnAddNewUser").click(function () {
                $("#modalAdd").modal('show');
                $(".input-mask").inputmask();
                userAdd();

            });
        });



        function userAdd() {
            //save modal ekleme amaçlı acıldığında önce off texti güncelliyoruz success diye bir class varsa onu siliyoruz sonra success primary clasını ekliyoruz.sonra da click yapıyoruz
            $("#btnSave").off().text('Ekle').removeClass('btn-success').addClass('btn-primary').click(function () {
                event.preventDefault();
                if ($("#frmAddUser").parsley().isValid() === false) {
                    $('#frmAddUser').parsley().validate();
                    $('#frmAddUser').addClass("was-validated");
                }
                else {
                    let data = {
                        name: $("#txtName").val(),
                        email: $("#txtEmail").val(),
                        gsm: $("#txtGsm").val(),
                        password: $("#password").val(),
                        userTypeId: 7
                    }
                    $.ajax({
                        type: 'POST',
                        url: '/Admin/User/Add',
                        data: data,
                        success: function () {
                            $("#modalAdd").modal('hide');
                            toastr.success("BAŞARILI", "Üyelik başarıyla oluşturulmuştur.");
                            // DataTable.ajax.reload();
                        },
                        error: function (res) {
                            toastr.error("HATA", res.responseText);
                        }
                    })
                }


            });
        }




        const myModal = new bootstrap.Modal(document.getElementById('modalId'), options)


    </script>





</body>
</html>