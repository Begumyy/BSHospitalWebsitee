        function fillRol() {
            $.ajax({
                type: 'GET',
                url: '/Admin/Dashboard/GetAllRoles',
                success: function (res) {
                    // Dropdown listesini temizleme
                    var ddlRol = $("#ddlRol");
                    ddlRol.empty();

                    // Yeni seçenekleri ekleme
                    for (var item of res) {
                        ddlRol.append(new Option(item.typeName, item.typeName));
                    }
                }
            });
