                    $.ajax({
                        type: 'POST',
                        url: '/Admin/Dashboard/Add',
                        data: { agentName: agent, email: email, password:password, userType:userType },
                        success: function () {
                            $("#modalList").modal('hide');
                            $("#tblListAgent").DataTable().ajax.reload();
                        }
                    });
                });
                $("#btnSave").text("Kaydet");
                $("#modalTitleId").text("Agent Ekle");
                $("#modalList").modal('show')
                fillRol();
            });

            function agentListele() {
                $("#tblListAgent").DataTable({
                    ajax: { url: '/Admin/Dashboard/GetAll', dataSrc: '' },
                    columns: [
                        { data: 'id', title: 'ID', },
                        
                        { data: "email", title: 'E-mail ' },
                        { data: "password", title: 'Şifre ' },
                        { data: "userType.typeName", title: 'Kullanıcı Tipi ' },
                        {
                            data: "id",
                            type: "agentName",
                            render: function (data, type, row) {
                                return `<a href="#" onclick="deleteHospital(${data})" class="btn btn-sm btn-danger">Sil</a> <a onclick="updateHospital('${data}','${row.email}','${row.password}','${row.userType.typeName}')" class="btn btn-sm btn-primary">Güncelle</a>`;
                            }
                        }],
                    language: {
                        "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                    }
                });
            }

        });


        function deleteHospital(id) {

            $.ajax({
                type: 'POST',
