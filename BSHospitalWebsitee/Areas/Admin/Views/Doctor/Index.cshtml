<div class="row">
    <div class="col-lg-12 ">
        <div class="card border border-primary">
            <div class="card-header bg-primary border-primary">
                <h5 class="my-0 text-white"><i class="uil uil-message me-3"></i>Doktorlar</h5>
            </div><!-- end card-header -->
            <div class="card-body">
                <a href="#" id="btnAdd" class="btn btn-primary">Yeni Doktor Ekle</a>
                <table id="tblListDoctor" class="table table-striped table-bordered">
                </table>
            </div><!-- end card-body -->
        </div><!-- end card -->
    </div>
</div>

<div class="modal fade" id="modalList" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitleId">Yeni Doktor Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" data-bs-target="#modalList" aria-label="Close"></button>
            </div>
            <form id="frmAddDestination" class="needs-validation">
                <div class="modal-body" style="max-height: 80vh; overflow-y: auto;">
                    <div class="container">

                        <div class="mb-3 row">
                            <label for="inputName" class="col-4 col-form-label">Doktor Adı </label>
                            <div class="col-8">
                                <input type="text" data-parsley-required-message="Lütfen fiyat giriniz" class="form-control needs-validation" required id="txtDoctor" placeholder="Lütfen Doktor Giriniz" />
                            </div>
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" data-bs-target="#modalList">Kapat</button>
                    <a id="btnSave" class="btn btn-primary">Kaydet</a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts{
    <script type="text/javascript">

        $(document).ready(function () {
            doktorListele();
            $("#btnAdd").click(function () {
                $("input").val('');
                $("#modalList").modal('show')
                fillListDoctor();
            });

            function doktorListele() {
                $("#tblListDoctor").DataTable({
                    ajax: { url: '/Admin/Doctor/GetAll', dataSrc: '' },
                    columns: [
                        { data: 'id', title: 'ID', },
                        { data: "doctorName", title: 'Doktor AD ' },
                        {
                            data: "id",
                            type: "doctorName",
                            render: function (data, type, row) {
                                return `<a href="#" onclick="deleteDoctor(${data})" class="btn btn-sm btn-danger">Sil</a> <a onclick="updateDoctor('${data}','${row.doctorName}')" class="btn btn-sm btn-primary">Güncelle</a>`;
                            }
                        }],
                    language: {
                        "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                    }
                });
            }
        });

        $("#btnSave").off().click(function (e) {
            e.preventDefault();
            var doctor = $("#txtDoctor").val();
            $.ajax({
                type: 'POST',
                url: '/Admin/Doctor/Add',
                data: { doctor: { doctorName: doctor } },
                success: function () {
                    $("#modalList").modal('hide');
                    $("#txtDoctor").val('');
                    doktorListele();
                }
            });
        });

        function deleteDoctor(id) {

            $.ajax({
                type: 'POST',
                url: '@Url.Action("DeleteById","Doctor")',
                data: { id: id },
                success: function (data) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Başarılı',
                        message: 'Doktor Silindi',
                        showConfirmButton: false,
                        timer: 1500
                    });
                    $("#tblListDoctor").DataTable().ajax.reload();
                }
            });

        }

        function updateDoctor(id, doctorName) {


            $("#txtDoctor").val(doctorName);
            fillListDoctor(doctorName);
            $("#modalList").modal("show");
            $("#modalTitleId").text("Doktor Güncelle");
            $("#btnSave").text("Güncelle");
            $("#btnSave").off();
            $("#btnSave").click(function () {




                $.ajax({
                    type: 'POST',
                    url: '/Admin/Doctor/Update',
                    data: { id: id, doctorname: $("#txtDoctor").val() },
                    success: function () {
                        $("#modalList").modal("hide");
                        $("#tblListDoctor").DataTable().ajax.reload();
                    }
                })
            });

            function fillListDoctor(doctorName) {
                $.ajax({
                    type: 'GET',
                    url: '/Admin/Doctor/GetAll',
                    success: function (res) {
                        $("#txtDoctor").empty();
                        for (var item of res) {
                            $("#txtDoctor").append(`<option value="${item.doctorName}">${item.doctorName}</option>`);


                        }

                    }
                });

            }

        }
        
    
    </script>
}