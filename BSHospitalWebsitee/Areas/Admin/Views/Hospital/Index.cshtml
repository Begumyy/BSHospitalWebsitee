<div class="row">
    <div class="col-lg-12 ">
        <div class="card border border-primary">
            <div class="card-header bg-primary border-primary">
                <h5 class="my-0 text-white"><i class="uil uil-message me-3"></i>Hastaneler</h5>
            </div><!-- end card-header -->
            <div class="card-body">
                <a href="#" id="btnAdd" class="btn btn-primary">Yeni Hastane Ekle</a>
                <table id="tblListHospital" class="table table-striped table-bordered">
                </table>
            </div><!-- end card-body -->
        </div><!-- end card -->
    </div>
</div>

<div class="modal fade" id="modalList" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitleId">Yeni Hastane Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" data-bs-target="#modalList" aria-label="Close"></button>
            </div>
            <form id="frmAddDestination" class="needs-validation">
                <div class="modal-body" style="max-height: 80vh; overflow-y: auto;">
                    <div class="container">

                        <div class="mb-3 row">
                            <label for="inputName" class="col-4 col-form-label">Hastane Adı </label>
                            <div class="col-8">
                                <input type="text" class="form-control" id="txtHospital" placeholder="Lütfen Hastane Giriniz"  />
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label for="inputName" class="col-4 col-form-label">Adres </label>
                            <div class="col-8">
                                <input type="text" class="form-control" id="txtAddress" placeholder="Lütfen Adres Giriniz"  />
                            </div>
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" data-bs-target="#modalList">Kapat</button>
                    <a id="btnSave" class="btn btn-primary">Kaydet</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <script type="text/javascript">
 
       $(document).ready(function () {
            hospitalListele();
            $("#btnAdd").click(function () {
                $("input").val('');
                $("#btnSave").off().click(function () {
                    var hospital = $("#txtHospital").val();
                    var address = $("#txtAddress").val();
                        $.ajax({
                            type: 'POST',
                            url: '/Admin/Hospital/Add',
                            data: { hospitalName: hospital, address: address },
                            success: function () {
                                $("#modalList").modal('hide');
                                $("#tblListHospital").DataTable().ajax.reload();
                            }
                        });
                });
                $("#btnSave").text("Kaydet");
                $("#modalTitleId").text("Hastane Ekle");
                $("#modalList").modal('show')
                fillListHospital();
                fillAddress();
            });

            function hospitalListele() {
                $("#tblListHospital").DataTable({
                    ajax: { url: '/Admin/Hospital/GetAll', dataSrc: '' },
                    columns: [
                        { data: 'id', title: 'ID', },
                        { data: "hospitalName", title: 'Hastane AD ' },
                        { data: "address", title: 'Adres ' },
                        {
                            data: "id",
                            type: "hospitalName",
                            render: function (data, type, row) {
                                return `<a href="#" onclick="deleteHospital(${data})" class="btn btn-sm btn-danger">Sil</a> <a onclick="updateHospital('${data}','${row.hospitalName}','${row.address}')" class="btn btn-sm btn-primary">Güncelle</a>`;
                            }
                        }],
                    language: {
                        "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                    }
                });
            }

        });


        function deleteHospital(id) {

            $.ajax({
                type: 'POST',
                url: '@Url.Action("DeleteById","Hospital")',
                data: { id: id },
                success: function (data) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Başarılı',
                        message: 'Hastane Silindi',
                        showConfirmButton: false,
                        timer: 1500
                    });
                    $("#tblListHospital").DataTable().ajax.reload();
                }
            });

        }


        function updateHospital(id, hospitalName, address) {
            $("#txtHospital").val(hospitalName);
            fillListHospital(hospitalName);
            $("#txtAddress").val(address);
            fillAddress(address);
            $("#modalList").modal("show");
            $("#modalTitleId").text("Hastane  Güncelle");
            $("#btnSave").text("Güncelle");
            $("#btnSave").off();
            $("#btnSave").click(function () {
                $.ajax({
                    type: 'POST',
                    url: '/Admin/Hospital/Update',
                    data: { id: id, hospitalname: $("#txtHospital").val(), address: $("#txtAddress").val() },
                    success: function () {
                        $("#modalList").modal("hide");
                        $("#tblListHospital").DataTable().ajax.reload();
                    }
                })
            });
        }

            function fillListHospital(hospitalName) {
                $.ajax({
                    type: 'GET',
                    url: '/Admin/Hospital/GetAll',
                    success: function (res) {
                        $("#txtHospital").empty();
                        for (var item of res) {
                            $("#txtHospital").append(`<option value="${item.hospitalName}">${item.hospitalName}</option>`);
                        }

                    }
                });

            }

            function fillAddress(address) {
                $.ajax({
                    type: 'GET',
                    url: '/Admin/Hospital/GetAll',
                    success: function (res) {
                        $("#txtAddress").empty();
                        for (var item of res) {
                            $("#txtAddress").append(`<option value="${item.address}">${item.address}</option>`);
                        }
                    }
                });
            }
  </script>
}