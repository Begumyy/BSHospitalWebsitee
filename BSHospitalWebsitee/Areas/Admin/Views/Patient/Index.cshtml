@section Scripts{
    <script type="text/javascript">

        $(document).ready(function () {
            patientListele();
            fillListDepartment();
            $("#btnAdd").click(function () {
                $("input").val('');
                $("#btnSave").off().click(function () {
                    
                        $.ajax({
                            type: 'POST',
                            url: '/Admin/Patient/Add',

                        data: randevu1 = {
                            hospitalId: $("#ddlHospital").val(),
                            departmentId: $("#ddlDepartment").val(),
                            doctorId: $("#ddlDoctor").val(),
                            appointmentDate: $("#txtAppointment").val(),

                            patient: {
                                patientName: $("#txtName").val(),
                                tckn: $("#txtTCKN").val(),
                                address: $("#txtAdres").val(),
                                Phone: $("#txtPhone").val(),
                                age: $("#txtYas").val(),
                                departmentId: $("#ddlDepartment").val(),
                                userId: $("#ddlUser").val()

                            }
                        },
                            success: function () {
                                $("#modalList").modal('hide');
                            $("#tblListPatient").DataTable().ajax.reload();
                            }
                        });
                });
                $("#btnSave").text("Kaydet");
                $("#modalTitleId").text("Hasta Ekle");
                $("#modalId").modal('show');
                fillListDepartment();
                
            });

            function patientListele() {
                $("#tblListPatient").DataTable({
                    ajax: { url: '/Admin/Patient/GetAll', dataSrc: '' },
                    columns: [
                        { data: 'id', title: 'ID', },
                        { data: "patientName", title: 'Hasta AD ' },
                        { data: "address", title: 'Adres ' },
                        { data: "phone", title: 'Telefon ' },
                        { data: "tckn", title: 'T.C. Kimlik No. ' },
                        { data: "age", title: 'Yaş ' },
                        {
                            data: "id",
                            type: "patientName",
                            render: function (data, type, row) {
                                return `<a href="#" onclick="deletePatient(${data})" class="btn btn-sm btn-danger">Sil</a> <a onclick="updatePatient('${data}','${row.hospitalName}','${row.address}','${row.phone}','${row.tckn}','${row.age}')" class="btn btn-sm btn-primary">Güncelle</a>`;
                            }
                        }],
                    language: {
                        "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                    }
                });
            }

        });


        function deletePatient(id) {

            $.ajax({
                type: 'POST',
                url: '@Url.Action("DeleteById","Patient")',
                data: { id: id },
                success: function (data) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Başarılı',
                        message: 'Hasta Silindi',
                        showConfirmButton: false,
                        timer: 1500
                    });
                    $("#tblListPatient").DataTable().ajax.reload();
                }
            });

        }


        function updatePatient(id, patientName, address, phone,tckn, age) {
            $("#txtPatient").val(patientName);
            fillListPatient(patientName);
            $("#txtAddress").val(address);
            fillAddress(address);
            $("#txtPhone").val(phone);
            fillPhone(phone);
            $("#txtTckn").val(tckn);
            fillTckn(tckn);
            $("#txtAge").val(age);
            fillAge(age);
            $("#modalList").modal("show");
            $("#modalTitleId").text("Hasta Güncelle");
            $("#btnSave").text("Güncelle");
            $("#btnSave").off();
            $("#btnSave").click(function () {
                $.ajax({
                    type: 'POST',
                    url: '/Admin/Patient/Update',
                    data: { id: id, patientname: $("#txtPatient").val(), address: $("#txtAddress").val(), phone: $("#txtPhone").val(), tckn: $("#txtTckn").val(), age: $("#txtAge").val() },
                    success: function () {
                        $("#modalList").modal("hide");
                        $("#tblListPatient").DataTable().ajax.reload();
                    }
                });
            });

  
        }
        function fillListDoctor(doctorName) {
            $.ajax({
                type: 'GET',
                url: '/Doctor/GetAll',
                success: function (res) {
                    $("#ddlDoctor").empty();
                    for (var item of res) {
                        $("#ddlDoctor").append(new Option(item.doctorName, item.id, false));
                    }
                }
            })
        }
        function fillListDepartment(departmantId) {
            $.ajax({
                type: 'GET',
                url: 'Admin/Patient/GetAllDepartment',
                success: function (res) {
                    $("#ddlDepartment").empty();
                    for (var item of res) {
                        $("#ddlDepartment").append(new Option(item.departmantName, item.id, false, item.id == departmantId));
                    }

                    // Veriler yüklendikten sonra, modal içindeki select elementine değerleri ekleyin
                    $("#ddlDepartment").val(departmantId); // Önceki seçili olanı belirtmek için departman ID'sini kullanın
                }
            });
        }
        function fillListHospital(hospitalId) {
            $.ajax({
                type: 'GET',
                url: '/Hospital/GetAll',
                success: function (res) {
                    $("#ddlHospital").empty();
                    for (var item of res) {
                        $("#ddlHospital").append(new Option(item.hospitalName, item.id, false, item.id == hospitalId));
                    }
                }
            })
        }
        function fillListUser(userId) {
            $.ajax({
                type: 'GET',
                url: '/Admin/User/GetAll',
                success: function (res) {
                    $("#ddlUser").empty();
                    for (var item of res) {
                        $("#ddlUser").append(new Option(item.email, item.id, false, item.id == userId));
                    }
                }
            })
        }
        function fillListPatient(patientName) {
            $.ajax({
                type: 'GET',
                url: '/Patient/GetAll',
                success: function (res) {
                    $("#txtName").empty();
                    for (var item of res) {
                        $("#txtName").append(`<option value="<${item.tckn}">${item.patientName}</option>`);


                    }
                }
            });
        }
                

    </script>
}
